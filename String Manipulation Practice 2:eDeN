Module Module1

    Sub Main()
        'Finding and Truncating a Character from a string

        Dim Str1, Str2 As String
        Dim Char1, Char2 As Char
        Dim i As Integer



        Str1 = ""
        Str2 = ""
        Char1 = ""
        Char2 = ""
        i = 0


        Console.Write("Please Write String 1: ")
        Str1 = Console.ReadLine

        Console.Write("Enter Character to truncate from string: ")
        Char1 = Console.ReadLine

        For i = 1 To Len(Str1)
            Char2 = Mid(Str1, i, 1)
            If Char1 <> Char2 Then
                Str2 = Str2 + Char2

            End If
        Next

        Console.Write("Prcoessed String After Truncation Is:" & Str2)
        Console.ReadKey()


    End Sub

End Module
